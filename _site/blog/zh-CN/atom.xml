    <link href="https://songchen.science/blog/zh-CN/2023/10/13/%E7%94%A8Python%E6%89%93%E9%80%A0%E7%B2%BE%E7%BE%8E%E4%BA%8C%E7%BB%B4%E7%A0%81%EF%BC%8C%E4%BC%A0%E9%80%92%E6%97%A0%E9%99%90%E5%8F%AF%E8%83%BD/"/>
